    "@types/node-cron": "^3.0.11",
    "eslint": "^8.56.0",
    "eslint-config-tjw-jsdoc": "^1.0.5",
    "eslint-plugin-jsdoc": "^48.0.2",
    "typescript": "^5.3.3"
  }

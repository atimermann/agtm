{
  "name": "@agtm/node-framework",
  "version": "9.0.10",
  "description": "Framework nodejs baseado no ExpressJs",
  "types": "./types/index.d.mts",
  "type": "module",
  "bin": {
    "nf-monitor": "scripts/monitor.mjs",
    "nf-keycloak": "scripts/keycloak.ts"
  },
  "scripts": {
    "check": "npm run tsc ; npm run lint ; npm run test",
    "publish-patch": "npm run tsc ; npm version patch && npm publish --access public && git push",
    "publish-minor": "npm run tsc ; npm version minor && npm publish --access public && git push",
    "publish-major": "npm run tsc ; npm version major && npm publish --access public && git push",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest",
    "lint": "npx eslint --ext .mjs,.js --fix .",
    "lint:test": "npx eslint  --ext .mjs,.js .",
    "update": "npm update @agtm/util && npm list @agtm/util",
    "audit": "npm audit --omit=dev",
    "tsc": "npx tsc"
  },
  "author": "Andr√© Timermann <andre@timermann.com.br>",
  "license": "ISC",
  "main": "./index.ts",
  "dependencies": {
    "@agtm/util": "^4.4.0",
    "@airbnb/node-memwatch": "^3.0.0",
    "@fastify/cors": "^10.0.1",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.2",
    "@ladjs/consolidate": "^1.0.4",
    "blessed": "^0.1.81",
    "change-case": "^5.4.4",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "esm-module-alias": "^2.2.1",
    "express": "^4.21.2",
    "fast-uri": "^3.0.6",
    "fastify": "^5.2.2",
    "figlet": "^1.8.0",
    "filesize": "^10.1.6",
    "helmet": "^8.0.0",
    "jssha": "^3.3.1",
    "lodash-es": "^4.17.21",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "openapi3-ts": "^4.4.0",
    "pluralize": "^8.0.0",
    "pretty-bytes": "^6.1.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "winston": "^3.17.0"
  },
  "files": [
    "library",
    "index.ts",
    "config.default.yaml",
    "config.development.yaml",
    "config.production.yaml",
    "types"
  ],
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "@agtm/ncli": "^8.1.0",
    "@eslint/js": "^9.15.0",
    "@prisma/client": "^6.0.1",
    "@stylistic/eslint-plugin-js": "^2.11.0",
    "@stylistic/eslint-plugin-ts": "^2.11.0",

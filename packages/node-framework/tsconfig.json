{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "types",
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true
  },
  "exclude": [
    "./node_modules",
    "./types"
  ]
}

    "@types/consolidate": "^0.14.4",
    "@types/express": "^4.17.21",
    "@types/figlet": "^1.5.8",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.10.1",
    "@types/node-cron": "^3.0.11",
    "@types/pluralize": "^0.0.33",
    "eslint": "^9.15.0",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^15.12.0",
    "prettier": "^3.4.1",
    "ts-json-schema-generator": "^2.3.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  }

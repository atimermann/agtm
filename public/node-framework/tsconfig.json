// Apenas para a IDE, o node ignora configuração aqui
{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    // Habilita a importação explícita de arquivos .ts
    "allowImportingTsExtensions": false,
    // Gera apenas arquivos de declaração (.d.ts)
    // Necessário pois o node não suporta typescritp nos modulos, vamos ter q compilar
    "emitDeclarationOnly": false,
    // Requerido em projetos compostos
    "composite": true,
    "allowSyntheticDefaultImports": true
  }
}

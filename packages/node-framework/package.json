{
  "name": "@agtm/node-framework",
  "version": "8.5.0",
  "description": "Framework nodejs baseado no ExpressJs",
  "types": "./types/index.d.mts",
  "type": "module",
  "bin": {
    "nf-monitor": "scripts/monitor.mjs"
  },
  "scripts": {
    "check": "npm run tsc ; npm run lint ; npm run test",
    "publish-patch": "npm version patch && npm publish --access public && git push",
    "publish-minor": "npm version minor && npm publish --access public && git push",
    "publish-major": "npm version major && npm publish --access public && git push",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest",
    "lint": "npx eslint --ext .mjs,.js --fix .",
    "lint:test": "npx eslint  --ext .mjs,.js .",
    "update": "npm update @agtm/util && npm list @agtm/util",
    "audit": "npm audit --omit=dev",
    "tsc": "npx tsc"
  },
  "author": "Andr√© Timermann <andre@timermann.com.br>",
  "license": "ISC",
  "main": "./index.mjs",
  "dependencies": {
    "@agtm/node-framework": "^8.2.2",
    "@agtm/util": "^4.2.5",
    "@airbnb/node-memwatch": "^2.0.0",
    "@ladjs/consolidate": "^1.0.3",
    "blessed": "^0.1.81",
    "body-parser": "^1.19.0",
    "chalk": "^5.3.0",
    "change-case": "^5.3.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "figlet": "^1.5.2",
    "filesize": "^10.0.8",
    "fs-extra": "^11.1.1",
    "handlebars": "^4.7.7",
    "helmet": "^7.0.0",
    "js-sha256": "^0.11.0",
    "js-yaml": "^4.1.0",
    "json5": "^2.2.3",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.2",
    "socket.io": "^4.7.1",
    "socket.io-client": "^4.7.2",
    "winston": "^3.8.2",
    "winston-transport": "^4.5.0",
    "yup": "^1.4.0"
  },
  "files": [
    "library",
    "index.mjs",
    "config.default.yaml",
    "config.development.yaml",
    "config.production.yaml",
    "types"
  ],
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@agtm/ncli": "^8.1.0",
    "@types/blessed": "^0.1.25",
